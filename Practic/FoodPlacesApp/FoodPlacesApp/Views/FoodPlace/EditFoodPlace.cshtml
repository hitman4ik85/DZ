@model FoodPlacesApp.Models.FoodPlace

<form method="post">
    <input type="hidden" asp-for="Id" />

    <label>Name: </label>
    <input type="text" name="name" asp-for="Name" />

    <label>Address: </label>
    <input type="text" name="address" asp-for="Address" />

    <label>Average Price: </label>
    <input type="number" name="averagePrice" asp-for="AveragePrice" />

    <input class="btn btn-warning" type="submit" value="Edit" />
</form>

<a asp-action="GetFoodPlaces">Go back</a>
